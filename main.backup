
function love.load()
  player = {}
  player.x = 10
  player.y = 20
  player.speed = 50
  player.rotate = 0
  player.img = love.graphics.newImage('assets/player.png')
  player.width = player.img:getWidth()
  player.height = player.img:getHeight()
end


function love.update(dt)
  rotate = 5 * dt
  if love.keyboard.isDown("right") then
    player.x = player.x + player.speed * dt
    player.rotate = player.rotate + 1
  elseif love.keyboard.isDown("left") then
    player.x = player.x - player.speed * dt
    player.rotate = 3*math.pi / 2
  elseif love.keyboard.isDown("down") then
    player.y = player.y + player.speed * dt
    player.rotate = math.pi
  elseif love.keyboard.isDown("up") then
    player.y = player.y - player.speed * dt
    player.rotate = math.pi * 2
  end
end

function love.draw()
  love.graphics.draw(player.img, player.x, player.y, player.rotate, 1, 1, player.width/2, player.height/2)
  print(player.rotate)
end
